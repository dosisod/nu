{
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": ["es5", "dom"],
    "module": "commonjs",
    "outDir": "js/",
    "rootDir": "ts/",
    "declaration": true,

    "strictNullChecks": false,
    "baseUrl": "./",
    "esModuleInterop": true,
    "removeComments": true,

    "strict": true,

    "forceConsistentCasingInFileNames": true
  }
}
